<!DOCTYPE html>
<!-- this is a beautiful statblock by Valloric - https://github.com/Valloric/statblock5e -->
<!-- used to fill in pdf info and display in browser -->

{{>header}}


<stat-block>
    <creature-heading>
      <h1>{{ character.name }}</h1>
      <h2>{{ character.race }} {{ character.class }}, {{ character.alignment }}</h2>
    </creature-heading>

    <top-stats>
      <property-line>
        <h4>Armor Class</h4>
        <p>{{ character.ac }} (natural armor)</p>
      </property-line>
      <property-line>
        <h4>Hit Points</h4>
        <p>{{ character.hp }}</p>
      </property-line>
      <property-line>
        <h4>Speed</h4>
        <p>{{ character.speed }}</p>
      </property-line>

      <abilities-block
            data-cha="{{ character.cha }}"
            data-con="{{ character.con }}"
            data-dex="{{ character.dex }}"
            data-int="{{ character.int }}"
            data-str="{{ character.str }}"
            data-wis="{{ character.wis }}"></abilities-block>

      <property-line>
        <h4>Skills</h4>
        <p>{{ character.skills }}</p>
      </property-line>
      <property-line>
        <h4>Senses</h4>
        <p>{{ character.senses }}</p>
      </property-line>
      <property-line>
        <h4>Languages</h4>
        <p>{{ character.languages }}</p>
      </property-line>
      <property-line>
        <h4>Challenge</h4>
        <p>{{ character.challange_rating }}</p>
      </property-line>
    </top-stats>

    <h3>Actions</h3>

    <property-block>
      <h4>Attack</h4>
      <p>{{ character.attacks }}</p>
    </property-block>

    {{#if character.spells}}
      <h3>SpellCasting</h3>

      <property-line>
        {{if }}
        {{#each character.spells}}
          <h4 style="-webkit-margin-before: 0px;-webkit-margin-after: 0px;">{{ id }} <span style="font-weight: normal">(<em>DC:</em> {{ save_dc }}, <em>Bonus:</em> {{ attack_bonus }})</span></h4>
          <p style="padding-left: 10px; -webkit-margin-before: 0px;-webkit-margin-after: 0px;">
            {{{ spells }}}
          </p>
        {{/each}}
      </property-line>
    {{/if}}

  </stat-block>

  {{>footer}}
